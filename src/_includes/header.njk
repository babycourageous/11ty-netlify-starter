<header class="container flex justify-between items-center mx-auto border-b border-gray-700 bg-gray-800">
  <nav class="-mb-px font-light text-white">
    <ul class="flex">
      {%- for nav in site.nav -%}
        <li class="mr-6{% if nav.url == page.url %} is-active{% endif %}">
          <a class="block pt-10 pb-6 hover:text-teal-200 border-b border-transparent hover:border-teal-200 uppercase" href="{{ nav.url | url }}">{{ nav.item }}</a>
        </li>
      {%- endfor -%}
    </ul>
  </nav>
</header>