{
  "name": "11ty-netlify-starter",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/babycourageous/11ty-netlify-starter.git",
  "author": "Rene Dellefont <renedellefont@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn run dev",
    "predev": "yarn run clean",
    "dev": "NODE_ENV=development npm-run-all --parallel build:assets build:11ty --sequential serve watch",
    "prebuild": "yarn run clean",
    "build": "NODE_ENV=production npm-run-all --sequential build:assets build:11ty",
    "build:assets": "npm-run-all --parallel build:assets:*",
    "build:assets:css": "postcss src/_assets/css/index.css -o _site/css/styles.css",
    "build:assets:js": "webpack src/_assets/javascript/index.js -o _site/javascript/main.js",
    "build:assets:images": "node imagemin.images.js",
    "build:assets:svg": "svg-sprite --svg-xmldecl=false --svg-doctype=false --symbol --symbol-inline=true --symbol-dest=. --dest=_includes src/_assets/svg/*.svg",
    "serve": "npm-run-all --parallel serve:*",
    "serve:site": "browser-sync '_site' 'http://localhost:9000' --no-notify --no-open",
    "build:11ty": "eleventy",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "chokidar 'src/_assets/css/**/*' 'tailwind.config.js' --command 'run-s build:assets:css browsersync:reload'",
    "watch:js": "chokidar 'src/_assets/javascript/**/*' --command 'run-s build:assets:js browsersync:reload'",
    "watch:images": "chokidar 'src/_assets/images/**/*' --command 'run-s build:assets:images browsersync:reload'",
    "watch:svg": "chokidar 'src/_assets/svg/**/*.svg' --command 'run-s build:svg build:11ty browsersync:reload'",
    "clean": "rm -rf _site && mkdir _site"
  },
  "dependencies": {},
  "devDependencies": {
    "@11ty/eleventy": "^0.8.3",
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.2",
    "browser-sync": "^2.26.7",
    "chokidar": "^3.0.2",
    "chokidar-cli": "^2.0.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "imagemin": "^7.0.0",
    "imagemin-cli": "^5.0.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "precss": "^4.0.0",
    "prettier": "^1.18.2",
    "tailwindcss": "^1.1.2",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.6"
  }
}
